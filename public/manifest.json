{
  "manifest_version": 2,
  "name": "Jigi",
  "author": "Back Market",
  "version": "0.0.0",
  "description": "A browser extension to manage JIRA and GitHub together.",
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "browser_action": {
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["storage"]
}
